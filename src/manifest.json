{
  "description": "Purge cookies and other storage within the current container",
  "manifest_version": 2,
  "name": "Container Purge",
  "version": "1.0",
  "homepage_url": "https://github.com/DanHerbert/FFContainerPurge",
  "browser_specific_settings": {
    "gecko": {
      "id": "container-purge@herbert.io",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "icons": {
    "48": "icons/fire-icon-48.png",
    "64": "icons/fire-icon-64.png",
    "256": "icons/fire-icon-256.png"
  },

  "permissions": [
    "<all_urls>",
    "activeTab",
    "browsingData",
    "contextualIdentities",
    "cookies",
    "privacy",
    "storage"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icons/fire-icon-32.png",
    "theme_icons": [{
        "light": "icons/fire-icon-32-light.png",
        "dark": "icons/fire-icon-32.png",
        "size": 32
    },
    {
        "light": "icons/fire-icon-64-light.png",
        "dark": "icons/fire-icon-64.png",
        "size": 64
    }],
    "default_title": "Container Purge",
    "default_popup": "popup/menu.html"
  }
}
